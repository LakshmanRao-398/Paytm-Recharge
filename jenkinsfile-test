pipeline {
    agent any

    stages {
        stage('Checkout from GitHub') {
            steps {
                git url: 'https://github.com/LakshmanRao-398/testing.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                  def filePath = 'abc.xml'
        /**        echo 'Running build...'
             //    sh "sed -i 's/lakshman/mahesh/g' abc.xml
                // Add your build steps here **/
                 bat """
                        powershell -Command "(Get-Content ${filePath}) -replace 'lakshman', 'mahesh' | Set-Content ${filePath}"
                        """
            }
        }

        stage('Post-Build') {
            steps {
                echo 'Done!'
            }
        }
    }
}
